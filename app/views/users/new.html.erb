<!-- Signing up a new user -->
<div>
 <div class="container">
    <div class="row">
      <br>
      <br>
      <div class="col s6 offset-s3">
        <h3 >Sign Up</h3>
      <%= form_for @user do |f| %>
        <div>
          <%= f.text_field :user_name, placeholder: " Username", id:"form"%>
        </div>
        <div>
          <%= f.text_field :email, placeholder: " Email", id:"form" %>
        </div>
        <div>
          <%= f.password_field :password, placeholder: " Password", id:"form" %>
        </div>
        <br>
        <div class="col s6 push-s4">
          <a class="waves-effect waves-light btn-large"><%= f.submit "Sign Up" %></a>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
